{% extends 'form_div_layout.html.twig' %}

{%- block form_row -%}
    <div class="form-group">
        {{- form_label(form) -}}
        {{- form_errors(form) -}}
        {% if form.vars.type is defined and form.vars.type == 'file' %}
            {{- form_widget(form, {'attr':{'class':'form-file'}}) -}}
        {% else %}
            {{- form_widget(form, {'attr':{'class':'form-control'}}) -}}
        {% endif %}
    </div>
{%- endblock form_row -%}